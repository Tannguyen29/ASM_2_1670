@model IEnumerable<ASM_2_1670.Areas.Admin.Models.Product>
@{
	ViewData["Title"] = "ProductByCategory";
	Layout = "~/Views/Shared/_Productlayout.cshtml";
}

<div class="row">
	<!-- product -->
	@foreach (var item in Model)
	{
		<div class="col-md-4 col-xs-6">
			<div class="product">
				<div class="product-img">
					<img src="@item.ImageURL" alt="Product Image" />
					<div class="product-label">
						<span class="new">NEW</span>
					</div>
				</div>
				<div class="product-body">
					<p class="product-category">@item.Category.CategoryName</p>
					<h3 class="product-name"> <a asp-action="ProductDetails" asp-route-id="@item.ProductID">@item.ProductName</a></h3>
					<h4 class="product-price">$@item.Price</h4>
				</div>
				<div class="add-to-cart">
					<button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button>
				</div>
			</div>
		</div>
	}

</div>
<!-- /store products -->
<!-- store bottom filter -->
<div class="store-filter clearfix">
	<span class="store-qty">Showing 20-100 products</span>
	<ul class="store-pagination">
		<li class="active">1</li>
		<li><a href="#">2</a></li>
		<li><a href="#">3</a></li>
		<li><a href="#">4</a></li>
		<li><a href="#"><i class="fa fa-angle-right"></i></a></li>
	</ul>
</div>
<!-- /store bottom filter -->
</div>
<!-- /STORE -->
