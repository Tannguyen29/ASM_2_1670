@model IEnumerable<ASM_2_1670.Areas.Admin.Models.Category>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="aside">
    <h3 class="aside-title">Categories</h3>
    <div class="checkbox-filter">
        @foreach (var item in Model)
        {
            <div class="input-checkbox">
                <input type="checkbox" id="@item.CategoryID" onchange="window.location.href='/ProductByCategory?id='+this.id">
                <label for="@item.CategoryID">
                    <span></span>
                    @item.CategoryName
                    @if (item.Products != null)
                    {
                        <small>@item.Products.ToList().Count</small>
                    }
                    else
                    {
                        <small>0</small>
                    }
                </label>
            </div>
        }
    </div>
</div>

	