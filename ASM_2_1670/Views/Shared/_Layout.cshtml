<script>
	$(document).ready(function () {
		var isCartOpen = false;

		// Xử lý sự kiện ấn vào giỏ hàng
		$("#cart-dropdown-toggle").click(function () {
			// Kiểm tra trạng thái của giỏ hàng
			if (isCartOpen) {
				// Nếu giỏ hàng đã mở, ẩn đi
				$("#cart-dropdown").slideUp();
				isCartOpen = false;
			} else {
				// Nếu giỏ hàng chưa mở, gửi yêu cầu AJAX để lấy danh sách sản phẩm trong giỏ hàng và hiển thị
				$.ajax({
					url: "/Cart/GetCartItems",
					method: "GET",
					success: function (data) {
						// Hiển thị danh sách sản phẩm trong giỏ hàng
						$("#cart-dropdown").html(data);
						$("#cart-dropdown").slideDown();
						isCartOpen = true;
					}
				});
			}
		});
	});
</script>
<script>
	$(function () {
		updateCartQuantity();

		function updateCartQuantity() {
			$.ajax({
				url: '@Url.Action("CartDetails", "Cart")',
				type: 'GET',
				success: function (data) {
					var cartQuantity = $(data).find('#cart-quantity').val();
					$('#cart-dropdown .qty').text(cartQuantity);
					setTimeout(updateCartQuantity, 5000); // Cập nhật số lượng hàng trong giỏ hàng sau 5 giây
				}
			});
		}
	});
